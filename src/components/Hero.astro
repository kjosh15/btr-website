---
import CtaGroup from './CtaGroup.astro';

const { data } = Astro.props;
---
<section
  id="hero"
  class="relative overflow-hidden border-b border-btr-muted bg-white py-24"
>
  <div class="absolute inset-0 bg-[radial-gradient(circle_at_top,_rgba(31,117,203,0.12),_transparent_60%)]"></div>
  <div class="relative mx-auto max-w-5xl px-6">
    <div class="space-y-8">
      <div class="inline-flex items-center rounded-full bg-btr-muted px-3 py-1 text-xs font-medium uppercase tracking-[0.28em] text-btr-text/65">
        Designing Sovereign AI Strategies
      </div>
      <h1 class="text-4xl font-semibold leading-snug text-btr-text sm:text-[2.8rem] sm:leading-tight">
        {data.headline}
      </h1>
      <p class="text-lg leading-relaxed text-btr-text/80 sm:text-xl">
        {data.subheadline}
      </p>
      <div class="flex flex-col gap-4 sm:flex-row sm:items-center sm:gap-6">
        <CtaGroup ctas={data.primaryCtas} align="start" />
      </div>
      {data.supportLine && (
        <p class="text-sm font-medium text-btr-text/55">
          {data.supportLine}
        </p>
      )}
    </div>
    <div class="mt-12 grid gap-8 rounded-3xl border border-btr-muted bg-btr-muted/35 p-8 text-sm leading-relaxed text-btr-text/75 lg:grid-cols-[minmax(0,1.4fr)_minmax(0,1fr)] lg:items-center">
      <div class="space-y-4">
        <h2 class="text-base font-semibold text-btr-text">
          Strategy, pilots, and partners stay in lockstep.
        </h2>
        <p>
          We translate national priorities into living specifications, validate with evidence-driven pilots, and coordinate trusted partners without sacrificing sovereign control.
        </p>
      </div>
      <dl class="grid gap-6 sm:grid-cols-3">
        <div class="space-y-2">
          <dt class="text-[0.65rem] uppercase tracking-[0.32em] text-btr-text/45">Strategic specifications</dt>
          <dd class="text-3xl font-semibold text-btr-accent">40+</dd>
        </div>
        <div class="space-y-2">
          <dt class="text-[0.65rem] uppercase tracking-[0.32em] text-btr-text/45">Pilot programmes</dt>
          <dd class="text-3xl font-semibold text-btr-accent">8+</dd>
        </div>
        <div class="space-y-2">
          <dt class="text-[0.65rem] uppercase tracking-[0.32em] text-btr-text/45">Years advising</dt>
          <dd class="text-3xl font-semibold text-btr-accent">20</dd>
        </div>
      </dl>
    </div>
  </div>
</section>
