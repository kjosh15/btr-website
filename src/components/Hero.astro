---
import CtaGroup from './CtaGroup.astro';

type HeroStrings = {
  cardTitle: string;
  cardSubtitle: string;
  cardBullets: string[];
};

const defaultStrings: HeroStrings = {
  cardTitle: 'Strategy, pilots, and partners stay in lockstep.',
  cardSubtitle:
    'We translate national priorities into living specifications, validate with evidence-driven pilots, and coordinate trusted partners so delivery teams—from ministries to frontier model vendors—are aligned from day one.',
  cardBullets: [
    'Blueprints that codify sovereign policy, data stewardship, and risk controls.',
    'Pilot programmes designed to prove strategy and surface evidence before scale.',
    'Partner governance that keeps strategic partners aligned to sovereign objectives.',
  ],
};

const {
  data,
  strings = defaultStrings,
}: {
  data: any;
  strings?: HeroStrings;
} = Astro.props;
---
<section
  id="hero"
  class="relative overflow-hidden border-b border-btr-muted bg-gradient-to-b from-white via-[#f5f8fc] to-white py-24"
>
  <div class="absolute inset-0 bg-[radial-gradient(circle_at_top,_rgba(31,117,203,0.12),_transparent_60%)]"></div>
  <div class="relative mx-auto max-w-5xl px-6">
    <div class="space-y-8">
      <div class="inline-flex items-center rounded-full bg-btr-muted px-3 py-1 text-xs font-medium uppercase tracking-[0.28em] text-btr-text/65">
        Designing Sovereign AI Strategies
      </div>
      <h1 class="text-4xl font-semibold leading-snug text-btr-text sm:text-[2.8rem] sm:leading-tight">
        {data.headline}
      </h1>
      <p class="text-lg leading-relaxed text-btr-text/80 sm:text-xl">
        {data.subheadline}
      </p>
      <div class="flex flex-col gap-4 sm:flex-row sm:items-center sm:gap-6">
        <CtaGroup ctas={data.primaryCtas} align="start" />
      </div>
      {data.supportLine && (
        <p class="text-base italic text-btr-text/65 text-center" set:html={data.supportLine} />
      )}
    </div>
    <div class="mt-12 grid gap-8 rounded-3xl border border-btr-muted bg-btr-muted/35 p-8 text-sm leading-relaxed text-btr-text/75 lg:grid-cols-[minmax(0,1.2fr)_minmax(0,1fr)] lg:items-center">
      <div class="space-y-4">
        <h2 class="text-base font-semibold text-btr-text">
          {strings.cardTitle}
        </h2>
        <p>{strings.cardSubtitle}</p>
      </div>
      <ul class="space-y-3 text-sm text-btr-text/80">
        {strings.cardBullets.map((item) => (
          <li class="flex items-start gap-3">
            <span class="mt-1 inline-flex h-1.5 w-6 shrink-0 rounded-full bg-btr-accent"></span>
            {item}
          </li>
        ))}
      </ul>
    </div>
  </div>
</section>
