---
type Step = {
  title: string;
  description: string;
};

const { steps = [] }: { steps: Step[] } = Astro.props;
---
{steps.length > 0 && (
  <ol class="relative space-y-6 pl-6 before:absolute before:left-[14px] before:top-4 before:h-[calc(100%-1.5rem)] before:w-px before:bg-gradient-to-b before:from-btr-accent/30 before:to-btr-accent/10">
    {steps.map((step, index) => {
      const order = index + 1;
      return (
        <li class="group relative rounded-3xl border border-btr-accent/15 bg-white/85 p-6 shadow-sm transition hover:-translate-y-1 hover:border-btr-accent/40 hover:shadow-md">
          <span class="absolute -left-[26px] top-6 flex h-12 w-12 items-center justify-center rounded-full border border-white bg-btr-accent text-base font-semibold text-white shadow-lg shadow-btr-accent/10 transition group-hover:scale-110">
            {order}
          </span>
          <span class="absolute -left-[22px] top-[72px] h-10 w-px bg-btr-accent/20 group-last:hidden"></span>
          <p class="text-xs font-semibold uppercase tracking-[0.32em] text-btr-text/45">
            Phase {order}
          </p>
          <h3 class="mt-3 text-xl font-semibold text-btr-text">{step.title}</h3>
          <p class="mt-3 text-sm leading-relaxed text-btr-text/75">{step.description}</p>
        </li>
      );
    })}
  </ol>
)}
