---
type Step = {
  title: string;
  description: string;
};

const { steps = [] }: { steps: Step[] } = Astro.props;
---
{steps.length > 0 && (
  <ol class="grid gap-5 md:grid-cols-2">
    {steps.map((step, index) => {
      const order = index + 1;
      return (
        <li class="rounded-2xl border border-btr-muted bg-white/85 p-5 shadow-sm transition hover:-translate-y-1 hover:border-btr-accent/30 hover:shadow-md">
          <div class="flex items-center gap-4">
            <span class="inline-flex h-9 w-9 items-center justify-center rounded-full bg-btr-accent text-xs font-semibold uppercase tracking-[0.2em] text-white">
              {order}
            </span>
            <div>
              <p class="text-[0.65rem] uppercase tracking-[0.28em] text-btr-text/45">Phase {order}</p>
              <h3 class="text-lg font-semibold text-btr-text">{step.title}</h3>
            </div>
          </div>
          <p class="mt-3 text-sm leading-relaxed text-btr-text/75">{step.description}</p>
        </li>
      );
    })}
  </ol>
)}
