---
type Stat = {
  value: string;
  label: string;
  source?: string;
};

const { stats = [] }: { stats: Stat[] } = Astro.props;
---
{stats.length > 0 && (
  <div class="grid gap-4 sm:grid-cols-2 lg:grid-cols-4">
    {stats.map((stat, index) => {
      const isHeroCard = index === 0;
      return (
        <article
          class={`group rounded-3xl border border-btr-accent/10 bg-white/80 p-6 shadow-sm backdrop-blur transition hover:-translate-y-1 hover:border-btr-accent/30 hover:shadow-lg ${isHeroCard ? 'sm:col-span-2 lg:col-span-2 lg:flex lg:flex-col lg:justify-between lg:bg-gradient-to-br lg:from-btr-accent/10 lg:to-btr-accent/5' : ''}`}
        >
          <div>
            <p class={`${isHeroCard ? 'text-4xl sm:text-5xl' : 'text-3xl'} font-semibold tracking-tight text-btr-accent`}>
              {stat.value}
            </p>
            <p class={`mt-3 ${isHeroCard ? 'text-base' : 'text-sm'} font-medium text-btr-text/80`}>
              {stat.label}
            </p>
          </div>
          {stat.source && (
            <p class="mt-5 text-xs font-semibold uppercase tracking-[0.3em] text-btr-text/45">
              {stat.source}
            </p>
          )}
        </article>
      );
    })}
  </div>
)}
