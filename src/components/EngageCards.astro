---
type Action = {
  title: string;
  summary: string;
  ctaLabel: string;
  href: string;
  external?: boolean;
};

const { actions = [] }: { actions: Action[] } = Astro.props;
---
{actions.length > 0 && (
  <div class="grid gap-6 lg:grid-cols-3">
    {actions.map((action, index) => (
      <article
        class={`flex h-full flex-col justify-between rounded-2xl border p-6 shadow-sm transition hover:-translate-y-1 hover:shadow-md ${index === actions.length - 1 ? 'border-btr-muted bg-white' : 'border-btr-accent/20 bg-btr-accent/5'}`}
      >
        <div class="space-y-3">
          <h3 class="text-lg font-semibold text-btr-text">{action.title}</h3>
          <p class="text-sm leading-relaxed text-btr-text/75">{action.summary}</p>
        </div>
        <div class="mt-6">
          <a
            href={action.href}
            class={`inline-flex items-center justify-center rounded-xl px-4 py-2 text-sm font-semibold transition focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-btr-accent ${index === actions.length - 1 ? 'border border-btr-accent text-btr-accent hover:bg-btr-accent hover:text-white' : 'bg-btr-accent text-white hover:bg-btr-accent-muted'}`}
            target={action.external ? '_blank' : undefined}
            rel={action.external ? 'noopener noreferrer' : undefined}
          >
            {action.ctaLabel}
          </a>
        </div>
      </article>
    ))}
  </div>
)}
