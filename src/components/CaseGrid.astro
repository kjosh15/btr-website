---
type CaseStudy = {
  title: string;
  summary: string;
};

const { cases = [] }: { cases: CaseStudy[] } = Astro.props;
---
{cases.length > 0 && (
  <div class="grid gap-6 md:grid-cols-2">
    {cases.map((item) => (
      <article class="group h-full overflow-hidden rounded-3xl border border-btr-accent/15 bg-white shadow-sm transition hover:-translate-y-1 hover:border-btr-accent/40 hover:shadow-lg">
        <div class="relative h-32 overflow-hidden bg-gradient-to-r from-btr-accent/20 via-transparent to-btr-accent/20">
          <svg class="absolute inset-0 h-full w-full text-btr-accent/15 transition group-hover:text-btr-accent/25" viewBox="0 0 200 120" fill="none" stroke="currentColor" stroke-width="12" stroke-linecap="round">
            <path d="M20 80 Q60 20 110 50 T190 40" />
            <path d="M30 100 Q80 60 140 90 T190 80" />
          </svg>
          <div class="absolute inset-0 bg-gradient-to-t from-white via-transparent to-transparent"></div>
          <p class="absolute bottom-4 left-5 inline-flex items-center gap-2 rounded-full bg-white/80 px-3 py-1 text-xs font-semibold uppercase tracking-[0.26em] text-btr-text/60 backdrop-blur">
            <span class="inline-flex h-2.5 w-2.5 rounded-full bg-btr-accent"></span>
            Engagement
          </p>
        </div>
        <div class="space-y-3 p-6">
          <h3 class="text-lg font-semibold text-btr-text">
            {item.title}
          </h3>
          <p class="text-sm leading-relaxed text-btr-text/75">
            {item.summary}
          </p>
        </div>
      </article>
    ))}
  </div>
)}
