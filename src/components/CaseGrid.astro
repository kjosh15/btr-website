---
type CaseStudy = {
  title: string;
  summary: string;
  tag?: string;
};

const { cases = [] }: { cases: CaseStudy[] } = Astro.props;
---
{cases.length > 0 && (
  <div class="grid gap-6 md:grid-cols-2">
    {cases.map((item) => (
      <article class="group h-full rounded-2xl border border-btr-muted bg-white/90 p-6 shadow-sm transition hover:-translate-y-1 hover:border-btr-accent/30 hover:shadow-md">
        <div class="flex items-center justify-between text-xs uppercase tracking-[0.3em] text-btr-text/50">
          <span>Engagement</span>
          {item.tag && (
            <span class="inline-flex items-center rounded-full bg-btr-muted px-3 py-1 text-[0.65rem] font-semibold text-btr-text/60">
              {item.tag}
            </span>
          )}
        </div>
        <h3 class="mt-4 text-lg font-semibold text-btr-text">
          {item.title}
        </h3>
        <p class="mt-3 text-sm leading-relaxed text-btr-text/75">
          {item.summary}
        </p>
      </article>
    ))}
  </div>
)}
